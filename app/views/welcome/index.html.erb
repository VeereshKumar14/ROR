<% if logged_in? %>
  <div class="row">
    <aside class="col-md-6">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="mpost_form">
        <%= render 'shared/mpost_form' %>
      </section>
    </aside>
    <div class="col-md-6">
          <h3>Micropost Feed</h3>
          <%= render 'shared/feed' %>
        </div>
  </div>
<% else %>

<div class="center jumbotron">
  <h1>Welcome to the Ruby on Rails</h1>

  <h2>
    <a href="https://www.railstutorial.org/">Ruby on Rails Tutorial</a>
    sample application.
  </h2>  <%= link_to "Sign up", signup_path, class: "btn btn-lg btn-success" %>
  <%= link_to "Sign in", login_path, class: "btn btn-lg btn-primary" %>
<br><br>
  <%= link_to "New User Details!", new_detail_path, class: "btn btn-lg btn-secondary" %>

</div>

<% end %>
