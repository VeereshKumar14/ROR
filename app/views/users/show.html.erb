<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-5">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-7">
    <% if @user.mposts.any? %>
      <h3>Posts (<%= @user.mposts.count %>)</h3>
      <ol class="mposts">
        <%= render @mposts %>
      </ol>
      <%= will_paginate @mposts %>
    <% end %>
  </div>
</div>
